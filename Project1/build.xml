<project>
  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="compile">
    <mkdir dir="build/classes"/>
    <java jar="sablecc.jar" inputstring="src/Proj1.js" fork="true"/>
    <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
  </target>

  <target name="run">
    <java classname="Project1.Main" classpath="build/classes">
        <arg value="src/ProjectOneSample/prog1.txt"/>
        <arg value="src/ProjectOneSample/prog2.txt"/>
        <arg value="src/ProjectOneSample/prog3.txt"/>
    </java>
  </target>

  <target name="all">
    <antcall target="clean"></antcall>
    <antcall target="compile"></antcall>
    <antcall target="run"></antcall>
  </target>
</project>
