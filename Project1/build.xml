<project>
  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="compile">
    <mkdir dir="build/classes"/>
    <java jar="sablecc.jar" fork="true">
        <arg value="-d build/sablecc src/Proj1.js"/>
    </java>
    <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
  </target>

  <target name="run">
    <java classname="Project1.Main" classpath="build/classes"/>
  </target>

  <target name="all">
    <antcall target="clean"></antcall>
    <antcall target="compile"></antcall>
    <antcall target="run"></antcall>
  </target>
</project>
