<project name="Project2" basedir="." default="all">

    <description>
        Implementation of a lexer and parser for Project 0's grammar.
    </description>

    <property name="build" location="build"/>
    <property name="src" location="src/${ant.project.name}"/>
    <property name="regex" location="${src}/regex.js"/>
    <property name="intsrc" location="src/Interpreter"/>
    <property name="input" location="input"/>
    <property name="output" location="${intsrc}"/>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${src}/${ant.project.name}"/>
        <delete file="${output}"/>
    </target>

    <target name="genlex">
        <exec executable="/bin/bash" failonerror="true">
            <arg line="-c 'java -jar sablecc.jar -d ${src} ${regex}'"/>
        </exec>
    </target>

    <target name="compile" depends="genlex">
        <mkdir dir="${build}"/>
        <javac
            srcdir="${src}"
            destdir="${build}"
            includeantruntime="false"
            failonerror="true"
            debug="on"/>
        <copy
            file="${src}/${ant.project.name}/lexer/lexer.dat"
            todir="${build}/${ant.project.name}/lexer"/>
        <java
            classname="${ant.project.name}.Main"
            classpath="${build}"
            output="${output}/ProgExpr.java">
            <arg line="${input}/expr.txt"/>
        </java>
        <java
            classname="${ant.project.name}.Main"
            classpath="${build}"
            output="${output}/ProgExpr2.java">
            <arg line="${input}/exprTwo.txt"/>
        </java>
        <java
            classname="${ant.project.name}.Main"
            classpath="${build}"
            output="${output}/ProgExpr3.java">
            <arg line="${input}/exprThree.txt"/>
        </java>
        <javac
            srcdir="${intsrc}"
            destdir="${build}"
            includeantruntime="false"
            failonerror="true"/>
    </target>

    <target name="run">
        <echo message="RUNNING TEST #1"/>
        <java classname="Interpreter.ProgExpr" classpath="${build}"/>
        <echo message="RUNNING TEST #2"/>
        <java classname="Interpreter.ProgExpr2" classpath="${build}"/>
        <echo message="RUNNING TEST #3"/>
        <java classname="Interpreter.ProgExpr3" classpath="${build}"/>
    </target>

    <target name="all">
        <antcall target="clean"/>
        <antcall target="compile"/>
        <antcall target="run"/>
    </target>
</project>
